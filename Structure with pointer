// Make a struct complex with real and imaginary parts.
//Write a function that takes two structure pointers and returns their addition.
#include<stdio.h>

struct complex{
int real;
int imag;
};

// 'p' stores the address of the structure variable passed from main()

void com(struct complex *p)
{
scanf("%d %d", &p->real, &p->imag);  // storing values at the address pointed by 'p'
}

// Function to add two complex numbers
// 'a' and 'b' store addresses of complex numbers c and c1
// We access their values using pointer notation and add them
void addCom(struct complex *a, struct complex *b) 
{

    int r1, i1;  

    r1 = a->real + b->real;   
    i1 = a->imag + b->imag;   

        // Printing the addition result in standard complex form
    printf("The addition is %d+%di", r1, i1);

}

int main()
{
    struct complex c;   // structure variable to store first complex number
    struct complex c1;  // structure variable to store second complex number

    printf("Enter the real and imaginary part1: ");
    com(&c);   // passing address of 'c' to store input in it using pointer

    printf("Enter the real and imaginary part2: ");
    com(&c1);  // passing address of 'c1' to store input in it

    // Calling addition function and passing addresses of both structure variables
    addCom(&c, &c1);

return 0;

}











